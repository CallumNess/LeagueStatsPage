            </div>
            <div class="form-group">
                <label asp-for="PlayerDetails.Team" class="control-label"></label>
                <input asp-for="PlayerDetails.Team" class="form-control" />
                <span asp-validation-for="PlayerDetails.Team" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerDetails.Age" class="control-label"></label>
                <input asp-for="PlayerDetails.Age" class="form-control" />
                <span asp-validation-for="PlayerDetails.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerDetails.Dob" class="control-label"></label>
                <input asp-for="PlayerDetails.Dob" class="form-control" />
                <span asp-validation-for="PlayerDetails.Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerDetails.StartDate" class="control-label"></label>
                <input asp-for="PlayerDetails.StartDate" class="form-control" />
                <span asp-validation-for="PlayerDetails.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

