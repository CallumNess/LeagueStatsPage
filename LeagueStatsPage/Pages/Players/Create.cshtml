@{
    ViewData["Title"] = "Create";
}

    <h2>Create new player details</h2>

<h4>Player Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerDetails.Name" class="control-label"></label>
                <input asp-for="PlayerDetails.Name" class="form-control" />
